@{
    ViewData["Title"] = "Список займов";
    Layout = "_Layout";
}

@model IEnumerable<SodruzhestvoFinance.Areas.Loan.Models.Loan>


<h1>Список займов</h1>

@using (Html.BeginForm("LoanCreationPage", "Loan", FormMethod.Get))
{
    <button type="submit" class="btn btn-sm btn-success mr-3">Оформить новый заём</button>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoanAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InterestRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoanTerm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IssueDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentBalance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LoanAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InterestRate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LoanTerm)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IssueDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CurrentBalance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <div class="d-flex">
                        <div class="mx-2">
                            @using (Html.BeginForm("Edit", "Employees", FormMethod.Get))
                            {
                                @Html.Hidden("id", item.EmployeeId)
                                <button type="submit" class="btn btn-sm btn-primary mr-3">Редактировать</button>
                            }
                        </div>
                        <div class="mx-2">
                            @using (Html.BeginForm("Delete", "Employees", FormMethod.Post, new { id = item.EmployeeId }))
                            {
                                @Html.Hidden("id", item.EmployeeId)
                                <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                            }
                        </div>
                        @* Доделать позже, доп информация о сотруднике *@
                        @* @using (Html.BeginForm("Details", "Employees", FormMethod.Get, new { id = item.EmployeeId }))
                    {
                    @Html.Hidden("id", item.EmployeeId)
                    <button type="submit" class="btn btn-sm btn-info mr-3">Детали</button>
                    } *@

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>