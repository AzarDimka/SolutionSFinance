@{
    ViewData["Title"] = "Роли";
    Layout = "_Layout";
}

@using SodruzhestvoFinance.Areas.Administration.Models
@model IEnumerable<ApplicationRole>
@addTagHelper SodruzhestvoFinance.TagHelpers.*, SodruzhestvoFinance

@Html.Partial("_AddRole")

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Имя</th>
            <th scope="col">Пользователи</th>
            <th scope="col">Редактировать</th>
            <th scope="col">Удалить</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td u-role="@item.Id"></td>
                <td>
                    <a class="btn btn-sm btn-secondary" asp-area="Administration" asp-controller="Role" asp-action="Update" asp-route-id="@item.Id">Update</a>
                </td>
                <td>
                    <form asp-area="Administration" asp-controller="Role" asp-action="Delete" asp-route-id="@item.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>